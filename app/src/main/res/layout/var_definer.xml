        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/lvSnakeShape"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/lvSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
